<%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"w-full max-w-sm") do |f| %>
  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <%= f.label :email, class: 'block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4' %>
    </div>
    <div class="md:w-2/3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500', placeholder: 'Your email' %>
    </div>
  </div>
  <div class="md:flex md:items-center mb-6">
    <div class="md:w-1/3">
      <%= f.label :password, class: 'block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4' %>
    </div>
    <div class="md:w-2/3">
    <%= f.password_field :password, autocomplete: "current-password", class: 'bg-gray-200 appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-purple-500', placeholder: "******************" %>
    </div>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="md:flex md:items-center mb-6">
      <div class="md:w-1/3"></div>
      <%= f.label :remember_me, class: 'md:w-2/3 block text-gray-500 font-bold' do %>
        <%= f.check_box :remember_me, class: '"mr-2 leading-tight' %>
        <span class="text-sm">
          <%= t('.remember_me') %>
        </span>
      </label>
      <% end %>
    </div>
  <% end %>

  <div class="md:flex md:items-center">
    <div class="md:w-1/3"></div>
    <div class="md:w-2/3">
      <%= f.submit t('.log_in'), class: 'bg-blue-500 hover:bg-blue-300 text-white py-2 px-4 rounded cursor-pointer' %>
    </div>
  </div>
<% end %>
