<div class="mb-4">
  <%= t('.perk_description') %>
</div>

<div id="perks" class="flex flex-wrap">
  <% @perks.each do |perk| %>
    <div class="perk border mx-2 rounded hover:bg-blue-200 w-full sm:w-1/2 md:w-1/3 lg:w-1/4 xl:w-1/6">
      <%= link_to perk.name, perk_path(perk), class: "block p-4" %>
    </div>
  <% end %>
</div>
