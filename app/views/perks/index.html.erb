<h1>Perks</h1>

<table>
  <thead>
    <tr>
      <th>Organisation</th>
      <th>Name</th>
      <th>Period</th>
      <th>Maximum amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @perks.each do |perk| %>
      <tr>
        <td><%= perk.organisation_id %></td>
        <td><%= perk.name %></td>
        <td><%= perk.period %></td>
        <td><%= perk.maximum_amount %></td>
        <td><%= link_to 'New reimbursement request', new_perk_reimbursement_request_path(perk) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
