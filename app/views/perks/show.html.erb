<div class="perk mb-4">
  <h1 class="text-xl mb-4"><%= @perk.name %></h1>

  <div class="flex pb-2">
    <div class="w-1/5 font-semibold"><%= t('.maximum_amount_label') %></div>
    <div class="w-4/5"><%= t('.maximum_amount', maximum_amount: @perk.maximum_amount) %></div>
  </div>

  <div class="flex pb-2">
    <div class="w-1/5 font-semibold"><%= t('.min_seniority_label') %></div>
    <div class="w-4/5"><%= t('.seniority', count: @perk.seniority) %></div>
  </div>

  <div class="flex pb-2">
    <div class="w-1/5 font-semibold"><%= t('.availability_label') %></div>
    <div class="w-4/5"><%= t('.availability_date', start_date: l(@perk.start_date, format: :long), end_date: l(@perk.end_date, format: :long)) %></div>
  </div>

  <div class="mt-5">
    <%= link_to(t('.request'), new_perk_reimbursement_request_path(@perk), class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 border border-blue-700 rounded") %>
  </div>
</div>
