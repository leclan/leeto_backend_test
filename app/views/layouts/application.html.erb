<!DOCTYPE html>
<html>
  <head>
    <title>Leeto</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container mx-auto p-5">
      <nav class="flex items-center justify-between flex-wrap text-black">
        <div class="flex items-center flex-shrink-0 mr-6">
          <%= link_to(t('application_name'), root_path, class: "font-semibold text-xl tracking-tight") %>
        </div>
        <div class="w-full block flex-grow lg:flex lg:items-center lg:w-auto">
          <div class="text-sm lg:flex-grow">
            <%= link_to(t('.my_perks'), perks_path, class: "hover:text-blue-400") %>
          </div>

          <% if employee_signed_in? %>
            <div>
              <%= link_to(t('.logout'), destroy_employee_session_path, method: :delete, class: "inline-block text-sm px-4 py-2 leading-none border rounded border-blue-400 text-black-500 hover:text-blue-400 mt-4 lg:mt-0") %>
            </div>
          <% end %>
        </div>
      </nav>

      <div class="my-4 border-t">
        <% if notice %>
          <div class="bg-teal-100 border-t-4 border-teal-500 rounded-b text-teal-900 px-4 py-3 mt-5 shadow-md" role="alert">
            <div class="flex">
              <div><svg class="fill-current h-6 w-6 text-teal-500 mr-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20"><path d="M2.93 17.07A10 10 0 1 1 17.07 2.93 10 10 0 0 1 2.93 17.07zm12.73-1.41A8 8 0 1 0 4.34 4.34a8 8 0 0 0 11.32 11.32zM9 11V9h2v6H9v-4zm0-6h2v2H9V5z"/></svg></div>
              <div>
                <p class="text-sm"><%= notice %></p>
              </div>
            </div>
          </div>
        <% end %>

        <% if alert %>
          <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 mt-5 rounded relative" role="alert">
            <%= alert %>
          </div>
        <% end %>

        <div class="pt-4">
          <%= yield %>
        </div>
      </div>
    </div>

    <footer class="absolute bottom-0 left-0 right-0 bg-gray-200 px-5 py-4">
      <div class="container mx-auto">
        <div class="flex items-center flex-shrink-0 text-black font-semibold text-xl tracking-tight">
          <%= t('application_name') %>
        </div>

        <div>
          <%= t('.baseline') %>
        </div>
      </div>
    </footer>
  </body>
</html>
